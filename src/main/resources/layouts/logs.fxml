<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="logbo.assy.automa.controllers.ControllerLogs"
      alignment="TOP_CENTER"
      spacing="20.0"
      prefWidth="900.0"
      prefHeight="660.0"
      styleClass="page-content"
      stylesheets="@../styles/main.css">

    <!-- En-tête -->
    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <children>
            <Label text="Historique des actions (Audit Logs)" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
        </children>
        <padding>
            <Insets left="20.0" right="20.0"/>
        </padding>
    </HBox>

    <!-- Filtres -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <children>
            <Label text="Filtrer par date :" />
            <DatePicker fx:id="dateDebut" promptText="Date début" />
            <Label text="à" />
            <DatePicker fx:id="dateFin" promptText="Date fin" />
            <Label text="Mot-clé :" />
            <TextField fx:id="motCle" promptText="Rechercher..." />
            <Button fx:id="btnRechercher" text="Rechercher" />
        </children>
        <padding>
            <Insets left="20.0" right="20.0"/>
        </padding>
    </HBox>

    <!-- Tableau des logs -->
    <TableView fx:id="tableLogs" prefHeight="550.0" prefWidth="850.0">
        <columns>
            <TableColumn fx:id="colUtilisateur" text="Utilisateur" prefWidth="150.0">
                <cellValueFactory>
                    <PropertyValueFactory property="utilisateur"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colAction" text="Action" prefWidth="300.0">
                <cellValueFactory>
                    <PropertyValueFactory property="action"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colDate" text="Date" prefWidth="200.0">
                <cellValueFactory>
                    <PropertyValueFactory property="date"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colHeure" text="Heure" prefWidth="100.0">
                <cellValueFactory>
                    <PropertyValueFactory property="heure"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

</VBox>
