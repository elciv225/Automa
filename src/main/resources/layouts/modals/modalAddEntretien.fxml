<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="700.0" spacing="15.0" stylesheets="@../../styles/main.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="logbo.assy.automa.controllers.ControllerAjouterEntretien">

    <children>

        <!-- Titre -->
        <Label styleClass="title" text="Formulaire d'ajout d'Entretien">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>

        <!-- Section véhicule et type -->
        <VBox spacing="10.0">
            <children>
                <Label styleClass="section-header" text="Informations générales"/>
                <Separator/>
                <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                    </columnConstraints>
                    <children>

                        <VBox GridPane.columnIndex="0">
                            <children>
                                <Label text="Véhicule concerné">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <ComboBox fx:id="comboVehicule" promptText="Sélectionner un véhicule"
                                          prefHeight="35.0" prefWidth="200.0" styleClass="combo-filter"/>
                            </children>
                        </VBox>

                        <VBox GridPane.columnIndex="1">
                            <children>
                                <Label text="Type d'entretien">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <ComboBox fx:id="comboType" promptText="Préventif, Curatif, etc."
                                          prefHeight="35.0" prefWidth="200.0" styleClass="combo-filter"/>
                            </children>
                        </VBox>

                    </children>
                </GridPane>
            </children>
        </VBox>

        <!-- Section description et dates -->
        <VBox spacing="10.0">
            <children>
                <Label styleClass="section-header" text="Détails et durée"/>
                <Separator/>
                <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                    </columnConstraints>
                    <children>

                        <VBox GridPane.columnIndex="0">
                            <children>
                                <Label text="Description de la panne">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="txtDescription" promptText="Ex: panne moteur"
                                           prefHeight="35.0" prefWidth="200.0" styleClass="text-field-recherche"/>
                            </children>
                        </VBox>

                        <VBox GridPane.columnIndex="1">
                            <children>
                                <Label text="Date de début">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <DatePicker fx:id="dateDebut" prefHeight="35.0" prefWidth="200.0" styleClass="date-picker"/>
                            </children>
                        </VBox>

                        <VBox GridPane.columnIndex="2">
                            <children>
                                <Label text="Date de fin">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <DatePicker fx:id="dateFin" prefHeight="35.0" prefWidth="200.0" styleClass="date-picker"/>
                            </children>
                        </VBox>

                    </children>
                </GridPane>
            </children>
        </VBox>

        <!-- Bouton Ajouter -->
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="btnAjouter" onAction="#ajouterEntretien" prefHeight="40.0" prefWidth="200.0"
                        styleClass="btn-ajouter-max" text="Ajouter l'Entretien"/>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>

    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

</VBox>
