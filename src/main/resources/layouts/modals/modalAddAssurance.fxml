<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="700.0" spacing="15.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="logbo.assy.automa.controllers.ControllerAjouterAssurance"
      stylesheets="@../../styles/main.css">

    <children>
        <Label styleClass="title" text="Formulaire d'ajout d'Assurance">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>

        <!-- Section 1: Détails de l'assurance -->
        <VBox prefWidth="660.0" spacing="10.0">
            <children>
                <Label styleClass="section-header" text="Détails de l'assurance">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Separator/>
                <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                    </columnConstraints>
                    <children>
                        <VBox GridPane.columnIndex="0">
                            <children>
                                <Label text="Compagnie d'assurance">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="txtCompagnie" promptText="Ex: NSIA, SUNU"
                                           prefHeight="35.0" prefWidth="200.0"
                                           styleClass="text-field-recherche"/>
                            </children>
                        </VBox>

                        <VBox GridPane.columnIndex="1">
                            <children>
                                <Label text="Type d'assurance">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <ComboBox fx:id="comboType" promptText="RC, Tous Risques..."
                                          prefHeight="35.0" prefWidth="200.0"
                                          styleClass="combo-filter"/>
                            </children>
                        </VBox>

                        <VBox GridPane.columnIndex="2">
                            <children>
                                <Label text="Véhicule concerné">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <ComboBox fx:id="comboVehicule" promptText="Sélectionner un véhicule"
                                          prefHeight="35.0" prefWidth="200.0"
                                          styleClass="combo-filter"/>
                            </children>
                        </VBox>
                    </children>
                </GridPane>
            </children>
        </VBox>

        <!-- Section 2: Durée et coût -->
        <VBox spacing="10.0">
            <children>
                <Label styleClass="section-header" text="Durée et coût">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Separator/>
                <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                    </columnConstraints>
                    <children>
                        <VBox GridPane.columnIndex="0">
                            <children>
                                <Label text="Montant de l'assurance">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="txtMontant" promptText="En FCFA"
                                           prefHeight="35.0" prefWidth="200.0"
                                           styleClass="text-field-recherche"/>
                            </children>
                        </VBox>

                        <VBox GridPane.columnIndex="1">
                            <children>
                                <Label text="Date de début">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <DatePicker fx:id="dateDebut"
                                            prefHeight="35.0" prefWidth="200.0"
                                            styleClass="date-picker"/>
                            </children>
                        </VBox>

                        <VBox GridPane.columnIndex="2">
                            <children>
                                <Label text="Date de fin">
                                    <VBox.margin>
                                        <Insets bottom="5.0"/>
                                    </VBox.margin>
                                </Label>
                                <DatePicker fx:id="dateFin"
                                            prefHeight="35.0" prefWidth="200.0"
                                            styleClass="date-picker"/>
                            </children>
                        </VBox>
                    </children>
                </GridPane>
            </children>
        </VBox>

        <!-- Bouton d'action -->
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="btnAjouter"
                        text="Ajouter l'Assurance"
                        onAction="#ajouterAssurance"
                        prefHeight="40.0" prefWidth="200.0"
                        styleClass="btn-ajouter-max"/>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
    </children>

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
</VBox>
