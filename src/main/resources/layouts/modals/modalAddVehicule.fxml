                        <Label text="Énergie">
                           <VBox.margin>
                              <Insets bottom="5.0"/>
                           </VBox.margin>
                        </Label>
                        <ComboBox fx:id="comboEnergie" prefHeight="35.0" prefWidth="200.0" styleClass="combo-filter"
                                  stylesheets="@../../styles/main.css" promptText="Sélectionnez...">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Thermique"/>
                                 <String fx:value="Électrique"/>
                                 <String fx:value="Hybride"/>
                              </FXCollections>
                           </items>
                        </ComboBox>
                     </children>
                  </VBox>
                  <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label text="Puissance">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="txtPuissance" prefHeight="35.0" prefWidth="200.0" promptText="Écrivez ici" styleClass="text-field-recherche" stylesheets="@../../styles/main.css">
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </GridPane>
         </children>
      </VBox>

      <!-- Section 3: Informations financières et dates -->
