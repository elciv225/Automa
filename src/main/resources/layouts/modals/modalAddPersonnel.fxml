<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="700.0" spacing="15.0" stylesheets="@../../styles/main.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="logbo.assy.automa.controllers.ControllerAjouterPersonnel">

    <children>
        <Label styleClass="title" text="Formulaire d'ajout d'un Personnel">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <VBox prefWidth="660.0" spacing="10.0">
            <children>
                <Label styleClass="section-header" text="Informations du personnel">
                    <font><Font name="System Bold" size="14.0"/></font>
                </Label>
                <Separator/>
                <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                        <ColumnConstraints prefWidth="200.0"/>
                    </columnConstraints>
                    <children>
                        <!-- Nom -->
                        <VBox GridPane.columnIndex="0">
                            <children>
                                <Label text="Nom"/>
                                <TextField fx:id="txtNom" promptText="Ex: KONE" styleClass="text-field-recherche"/>
                            </children>
                        </VBox>

                        <!-- Prénom -->
                        <VBox GridPane.columnIndex="1">
                            <children>
                                <Label text="Prénom"/>
                                <TextField fx:id="txtPrenom" promptText="Ex: Mariam" styleClass="text-field-recherche"/>
                            </children>
                        </VBox>

                        <!-- Email -->
                        <VBox GridPane.columnIndex="2">
                            <children>
                                <Label text="Email"/>
                                <TextField fx:id="txtEmail" promptText="Ex: utilisateur@domaine.com" styleClass="text-field-recherche"/>
                            </children>
                        </VBox>

                        <!-- Téléphone -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <children>
                                <Label text="Téléphone"/>
                                <TextField fx:id="txtTelephone" promptText="Ex: 0701234567" styleClass="text-field-recherche"/>
                            </children>
                        </VBox>

                        <!-- Fonction -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <Label text="Fonction"/>
                                <ComboBox fx:id="comboFonction" promptText="Sélectionner la fonction" styleClass="combo-filter"/>
                            </children>
                        </VBox>

                        <!-- Service -->
                        <VBox GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <children>
                                <Label text="Service"/>
                                <ComboBox fx:id="comboService" promptText="Sélectionner le service" styleClass="combo-filter"/>
                            </children>
                        </VBox>
                    </children>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                </GridPane>
            </children>
        </VBox>

        <!-- Bouton Ajouter -->
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="btnAjouter" onAction="#ajouterPersonnel" prefHeight="40.0" prefWidth="200.0"
                        styleClass="btn-ajouter-max" text="Ajouter le personnel"/>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
