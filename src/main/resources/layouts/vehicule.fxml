                        <TableView fx:id="tabVehicule" prefWidth="1860.0" styleClass="tab" tableMenuButtonVisible="true" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
