<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" prefHeight="600.0" prefWidth="800.0"
      stylesheets="@../styles/main.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="logbo.assy.automa.controllers.ControllerCompte">

   <children>
      <!-- Titre -->
      <Label text="Mon Compte" styleClass="title-page">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <!-- Message d'erreur/succès -->
      <Label fx:id="lblMessage" text="Message" visible="false" style="-fx-padding: 10px;" />

      <!-- Formulaire principal -->
      <VBox spacing="15.0" maxWidth="600.0">
         <children>
            <!-- Informations non modifiables -->
            <TitledPane text="Informations sur le compte" expanded="true">
               <content>
                  <GridPane hgap="20.0" vgap="15.0">
                     <columnConstraints>
                        <ColumnConstraints prefWidth="150.0" />
                        <ColumnConstraints prefWidth="400.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                     <children>
                        <Label text="Login:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="txtLogin" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   styleClass="champ-readonly" />

                        <Label text="Fonction:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextField fx:id="txtFonction" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                   styleClass="champ-readonly" />

                        <Label text="Service:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <TextField fx:id="txtService" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                   styleClass="champ-readonly" />
                     </children>
                     <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                     </padding>
                  </GridPane>
               </content>
            </TitledPane>

            <!-- Informations modifiables -->
            <TitledPane text="Informations personnelles" expanded="true">
               <content>
                  <GridPane hgap="20.0" vgap="15.0">
                     <columnConstraints>
                        <ColumnConstraints prefWidth="150.0" />
                        <ColumnConstraints prefWidth="400.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                     <children>
                        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="txtNom" promptText="Votre nom" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextField fx:id="txtPrenom" promptText="Votre prénom" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <TextField fx:id="txtEmail" promptText="Votre adresse email" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Téléphone:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <TextField fx:id="txtTelephone" promptText="Votre numéro de téléphone" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                     </children>
                     <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                     </padding>
                  </GridPane>
               </content>
            </TitledPane>

            <!-- Section changement de mot de passe (initialement masquée) -->
            <VBox fx:id="vboxChangementMotDePasse" spacing="10.0" visible="false" managed="false">
               <TitledPane text="Changement de mot de passe" expanded="true">
                  <content>
                     <GridPane hgap="20.0" vgap="15.0">
                        <columnConstraints>
                           <ColumnConstraints prefWidth="180.0" />
                           <ColumnConstraints prefWidth="370.0" />
                        </columnConstraints>
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                        <children>
                           <Label text="Ancien mot de passe:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                           <PasswordField fx:id="txtAncienMotDePasse" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                           <Label text="Nouveau mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                           <PasswordField fx:id="txtNouveauMotDePasse" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                           <Label text="Confirmer le mot de passe:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                           <PasswordField fx:id="txtConfirmationMotDePasse" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                        </children>
                        <padding>
                           <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                        </padding>
                     </GridPane>
                  </content>
               </TitledPane>
               <Button fx:id="btnChangerMotDePasse" text="Valider le changement" onAction="#changerMotDePasse"
                       styleClass="btn-valider" prefWidth="250.0" alignment="CENTER" />
            </VBox>

            <!-- Boutons d'action -->
            <HBox spacing="20.0" alignment="CENTER">
               <Button fx:id="btnEnregistrer" text="Enregistrer les modifications" onAction="#enregistrerModifications"
                       styleClass="btn-ajouter-max" prefWidth="250.0" />

               <Button text="Changer le mot de passe" onAction="#afficherFormChangementMotDePasse"
                       styleClass="btn-action" prefWidth="250.0" />
            </HBox>
         </children>
      </VBox>
   </children>

   <padding>
      <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
   </padding>
</VBox>